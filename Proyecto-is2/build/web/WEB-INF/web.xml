<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletInicio</servlet-name>
        <servlet-class>Servlets.Inicio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDisponibilidad</servlet-name>
        <servlet-class>Servlets.VerDisponibilidad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAsignar</servlet-name>
        <servlet-class>Servlets.AsignarCubiculo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarLibros</servlet-name>
        <servlet-class>Servlets.MostrarLibros</servlet-class>
    </servlet>
        <servlet>
        <servlet-name>ReservarPc</servlet-name>
        <servlet-class>servlets.ReservarPc</servlet-class>
    </servlet>   
    <servlet-mapping>
        <servlet-name>ServletInicio</servlet-name>
        <url-pattern>/ServletInicio</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>ReservarPc</servlet-name>
        <url-pattern>/ReservarPc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDisponibilidad</servlet-name>
        <url-pattern>/ServletDisponibilidad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAsignar</servlet-name>
        <url-pattern>/ServletAsignar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarLibros</servlet-name>
        <url-pattern>/MostrarLibros</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
